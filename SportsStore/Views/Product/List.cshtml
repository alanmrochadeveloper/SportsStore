@model ProductsListViewModel

    
    <div class="col-sm-8 bg-secondary">
        @foreach (var p in Model.Products)
        {
            <partial name="ProductSummary" model="p" /> @* obsolete @Html.Partial("ProductSummary",p)*@
        }
        <div page-model="@Model.PagingInfo"
             page-action="List" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary"
             page-class-selected="btn-primary"  page-url-category="@Model.CurrentCategory"
             class="btn-group float-sm-right">
        </div>
    </div>

