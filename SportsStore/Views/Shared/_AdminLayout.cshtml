<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="\lib\css\dist\**\*.min.css" />
    <link rel="stylesheet" asp-href-include="\lib\fontawesome4.7\css\all.css" />
    <script type="text/javascript" asp-src-include="\lib\scripts\jquery\*.*"></script>
    <title>@ViewData["Title"]</title>
</head>

<body class="m-1 p-1">
    <div class="bg-info p-2">
        <h4>@ViewBag.Title</h4>
    </div> 
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>} @RenderBody()
    </body>
</html>
